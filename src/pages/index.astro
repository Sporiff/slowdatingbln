---
import Layout from "../layouts/Layout.astro";
import { meetupCards, postCards } from "../utils/fetchData";
import Carousel from "../components/Carousel.astro";
---

<Layout title="Slow Dating Berlin">
  {
    meetupCards.length > 0 && (
      <Carousel title="Upcoming Events" cards={meetupCards} id="event-carousel" />
    )
  }
  {
    postCards.length > 0 && (
      <Carousel title="News & Community" cards={postCards} id="blog-carousel" />
    )
  }
</Layout>
