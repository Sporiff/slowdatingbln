---
import Layout from "../../layouts/Layout.astro";
import PostCard from "../../components/PostCard.astro";
import { meetupPosts } from "../../utils/fetchData";
---

<Layout title="Events">
  <div
    class="bg-white px-6 py-4 sm:py-6 lg:px-8 rounded-xl p-10 mx-auto max-w-[65ch]"
  >
    <div class="mx-auto text-center">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900">Events</h2>
      {
        meetupPosts && meetupPosts.length > 0 && (
          <p class="mt-6 text-lg leading-8 text-gray-700">
            Check out our in-person events
          </p>
        )
      }
      {
        !meetupPosts ||
          (meetupPosts.length < 1 && (
            <p class="mt-6 text-lg leading-8 text-gray-700">
              Check out our in-person events.
            </p>
          ))
      }
      <div class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">
        {
          meetupPosts &&
            meetupPosts.map((post: MeetupResponse | PostResponse) => (
              <PostCard post={post} />
            ))
        }
      </div>
    </div>
  </div>
</Layout>
