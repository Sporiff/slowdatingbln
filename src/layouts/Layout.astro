---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import ConsentScripts from "../components/ConsentScripts.astro";
import PrivacyBanner from "../components/PrivacyBanner.astro";
import { pages } from "../utils/fetchData";
import MetaHeadings from "../components/MetaHeadings.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <MetaHeadings {title} />
  <body class="bg-themeColor font-poppins flex flex-col min-h-screen">
    <nav>
      <Navbar pages={pages} />
    </nav>
    <main class="container mx-auto mb-10">
      <slot />
    </main>
    <Footer />
    <PrivacyBanner />
  </body>
</html>

<ConsentScripts />

<style>
  figure {
    max-width: 80%;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
  }
</style>
