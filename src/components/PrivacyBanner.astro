<!--Privacy banner -->
<div
  class="hidden fixed inset-x-0 bottom-0 flex flex-col justify-between gap-x-8 gap-y-4 bg-white p-6 ring-1 ring-gray-900/10 md:flex-row md:items-center lg:px-8"
  id="cookie-banner"
>
  <p class="max-w-4xl text-sm leading-6 text-gray-900">
    This website uses Google Analytics to measure usage. Accepting our cookies
    helps us gauge how well we're doing.
  </p>
  <div class="flex flex-none items-center gap-x-5">
    <button
      type="button"
      id="accept-button"
      class="rounded-md bg-gray-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900"
      >Accept all</button
    >
    <button
      type="button"
      id="deny-button"
      class="text-sm font-semibold leading-6 text-gray-900">Reject all</button
    >
  </div>
</div>
