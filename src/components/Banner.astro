---
import { Image } from "astro:assets";
import heartImage from "../images/heart.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="flex items-center justify-center bg-gradient-to-r from-blue-600 to-fuchsia-400 mb-4 mt-4"
>
  <span
    class="text-white text-xl xs:text-2xl sm:text-3xl md:text-4xl lg:text-5xl xs:text-6xl font-bold flex-none text-center"
    >{title}</span
  ><Image
    src={heartImage}
    alt=""
    width="45"
    height="45"
    class="ml-2"
    loading="eager"
  />
</div>
